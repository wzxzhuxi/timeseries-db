FROM rust:1.70-slim as builder

# ğŸ“¦ å®‰è£…æ„å»ºä¾èµ–
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# ğŸ“‹ å¤åˆ¶ä¾èµ–æ–‡ä»¶
COPY Cargo.toml Cargo.lock ./

# ğŸ“ å¤åˆ¶æºä»£ç 
COPY src ./src

# ğŸ”¨ æ„å»ºå‘å¸ƒç‰ˆæœ¬
RUN cargo build --release

# ğŸš€ è¿è¡Œæ—¶é•œåƒ
FROM debian:bookworm-slim

# ğŸ“¦ å®‰è£…è¿è¡Œæ—¶ä¾èµ–
RUN apt-get update && apt-get install -y \
    ca-certificates \
    curl \
    libssl3 \
    && rm -rf /var/lib/apt/lists/*

# ğŸ‘¤ åˆ›å»ºérootç”¨æˆ·
RUN useradd -r -s /bin/false tsdb

WORKDIR /app

# ğŸ“¥ å¤åˆ¶ç¼–è¯‘å¥½çš„äºŒè¿›åˆ¶æ–‡ä»¶
COPY --from=builder /app/target/release/timeseries-db /usr/local/bin/timeseries-db

# ğŸ”’ è®¾ç½®æƒé™
RUN chmod +x /usr/local/bin/timeseries-db

# ğŸ“ åˆ›å»ºæ•°æ®ç›®å½•
RUN mkdir -p /app/data /app/logs && \
    chown -R tsdb:tsdb /app

# âš™ï¸ ç¯å¢ƒå˜é‡é…ç½®
ENV PORT=6364
ENV DATA_DIR=/app/data
ENV RUST_LOG=info
ENV MEMTABLE_THRESHOLD=1000

# ğŸ“¡ æš´éœ²ç«¯å£
EXPOSE 6364

# ğŸ’¾ æ•°æ®å·
VOLUME ["/app/data", "/app/logs"]

# ğŸ¥ å¥åº·æ£€æŸ¥
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:6364/health || exit 1

# ğŸ‘¤ åˆ‡æ¢åˆ°érootç”¨æˆ·
USER tsdb

# ğŸš€ å¯åŠ¨å‘½ä»¤
CMD ["timeseries-db"]

